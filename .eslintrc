{
    "root": true,
    "env": {
        "browser": true
    },
    "extends": [
        "plugin: tailwindcss/recommended",
        "@flybywiresim/eslint-config"
    ],
    "plugins": [
        "@typescript-eslint",
        "tailwindcss"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "script",
        "requireConfigFile": false
    },
    "settings": {
        "tailwindcss": {
            "groupByResponsive": true
        },
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "overrides": [
        {
            "files": [
                "*.jsx",
                "*.tsx"
            ],
            "parserOptions": {
                "sourceType": "module",
                "ecmaFeatures": {
                    "jsx": true
                }
            }
        },
        {
            "files": [
                "*.mjs",
                "*.ts",
                "*.d.ts"
            ],
            "parserOptions": {
                "sourceType": "module"
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "no-undef": "off"
            }
        }
    ],
    // override di Airbnb
    "rules": {
        // Non rilevante
        "jsx-ally/alt-text": "off",
        "jsx-ally/no-static-element-interactions": "off",
        "jsx-ally/click-events-have-key-events": "off",
        "jsx-ally/anchor-is-valid": "off",
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "jsx-ally/no-noninteractive-element-interactions": "off",
        "tailwindcss/no-custom-classname": "off",
        "global-require": 0
    } 
}